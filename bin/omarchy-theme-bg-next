#!/bin/bash

# Cycles through the background images available

BACKGROUNDS_DIR="$HOME/.config/omarchy/current/theme/backgrounds/"
CURRENT_BACKGROUND_LINK="$HOME/.config/omarchy/current/background"

# Debug logging
echo "[$(date)] omarchy-theme-bg-next called" >> /tmp/omarchy-bg-debug.log

mapfile -d '' -t BACKGROUNDS < <(find -L "$BACKGROUNDS_DIR" -type f -print0 | sort -z)
TOTAL=${#BACKGROUNDS[@]}

echo "[$(date)] Found $TOTAL backgrounds in $BACKGROUNDS_DIR" >> /tmp/omarchy-bg-debug.log
for bg in "${BACKGROUNDS[@]}"; do
  echo "[$(date)]   - $bg" >> /tmp/omarchy-bg-debug.log
done

if [[ $TOTAL -eq 0 ]]; then
  notify-send "No background was found for theme" -t 2000
  pkill -x swaybg
  setsid uwsm-app -- swaybg --color '#000000' >/dev/null 2>&1 &
else
  # Get current background from symlink (use -f to fully resolve symlink chain)
  if [[ -L "$CURRENT_BACKGROUND_LINK" ]]; then
    CURRENT_BACKGROUND=$(readlink -f "$CURRENT_BACKGROUND_LINK")
    echo "[$(date)] Current background: $CURRENT_BACKGROUND" >> /tmp/omarchy-bg-debug.log
  else
    # Default to first background if no symlink exists
    CURRENT_BACKGROUND=""
    echo "[$(date)] No current background symlink found" >> /tmp/omarchy-bg-debug.log
  fi

  # Find current background index
  INDEX=-1
  for i in "${!BACKGROUNDS[@]}"; do
    if [[ "${BACKGROUNDS[$i]}" == "$CURRENT_BACKGROUND" ]]; then
      INDEX=$i
      break
    fi
  done

  echo "[$(date)] Current background index: $INDEX" >> /tmp/omarchy-bg-debug.log

  # Get next background (wrap around)
  if [[ $INDEX -eq -1 ]]; then
    # Use the first background when no match was found
    NEW_BACKGROUND="${BACKGROUNDS[0]}"
    echo "[$(date)] No match found, using first background: $NEW_BACKGROUND" >> /tmp/omarchy-bg-debug.log
  else
    NEXT_INDEX=$(((INDEX + 1) % TOTAL))
    NEW_BACKGROUND="${BACKGROUNDS[$NEXT_INDEX]}"
    echo "[$(date)] Next index: $NEXT_INDEX, new background: $NEW_BACKGROUND" >> /tmp/omarchy-bg-debug.log
  fi

  # Set new background symlink
  ln -nsf "$NEW_BACKGROUND" "$CURRENT_BACKGROUND_LINK"
  echo "[$(date)] Updated symlink to: $NEW_BACKGROUND" >> /tmp/omarchy-bg-debug.log

  # Relaunch swaybg
  pkill -x swaybg
  echo "[$(date)] Killed swaybg, relaunching with: swaybg -i $CURRENT_BACKGROUND_LINK -m fill" >> /tmp/omarchy-bg-debug.log
  setsid uwsm-app -- swaybg -i "$CURRENT_BACKGROUND_LINK" -m fill >/dev/null 2>&1 &
fi
